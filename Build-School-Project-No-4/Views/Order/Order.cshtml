@model  GroupViewModel
@*@model IEnumerable<Build_School_Project_No_4.ViewModels.OrderViewModel>*@
<div class="sidebar ">
    <input type="checkbox" name="" id="side-menu-switch">
    <div class="side-menu">
        <p>Purchased Orders</p>
        <nav class="tab-title">
            <a href="#">Unpaid</a>
            <a href="#">Pending</a>
            <a href="#">Not Started</a>
            <a href="#">Started</a>
            <a href="#">Completed</a>
        </nav>
        <label for="side-menu-switch">
            <i class="fas fa-arrow-right"></i>
        </label>
    </div>
</div>
<div class="container">
    <div class="rowpadding row">
        <div class="title_height_padding col-12 col-md-2">
            <h1>Unpaid</h1>
        </div>
        <div>
            @foreach (var m in Model.Order)
            {
                <div class="wrap row ">
                    <div class=" col-2 col-md-2">
                        <p>
                            Details
                        </p>
                        <p>
                            @Html.DisplayFor(x => m.OrderId)
                        </p>
                    </div>
                    <div class=" col-2 col-md-2">
                        <p>
                            Order Time
                        </p>
                        <p>
                            @Html.DisplayFor(x => m.OrderDate)
                        </p>
                    </div>
                    <div class=" col-2 col-md-2">
                        <p>
                            Quantity
                        </p>
                        <p>
                            @Html.DisplayFor(x => m.Quality)
                        </p>
                    </div>
                    <div class=" col-2 col-md-2">
                        <p>
                            Total Price
                        </p>
                        <p>
                            @Html.DisplayFor(x => m.TotalPrice)
                        </p>
                    </div>
                    <div class=" col-2 col-md-2">
                        <p>
                            Order Status
                        </p>
                        <p>
                            @Html.DisplayFor(x => m.OrderStatus)
                        </p>
                    </div>
                    <div class="col-2 col-md-2">
                        <p>
                            Options
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="footerimg col-12">
            <img src="~/Assets/OrderImages/order.png" alt="">
        </div>
    </div>
</div>
